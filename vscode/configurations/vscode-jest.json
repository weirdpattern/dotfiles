{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Run Tests",
        "program": "${workspaceRoot}/node_modules/jest/bin/jest",
        "args": ["--runInBand", "--config", "jest.json"],
        "runtimeArgs": ["--nolazy"],
        "stopOnEntry": false,
        "cwd": "${workspaceRoot}",
        "sourceMaps": true,
        "console": "integratedTerminal"
      }
    ]
  }
